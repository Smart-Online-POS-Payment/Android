<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.PlaceholderFragment">

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Smart Online Post Payment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logoutView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logout"
        tools:layout_editor_absoluteX="371dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/notificationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mail"
        tools:layout_editor_absoluteX="316dp"
        tools:layout_editor_absoluteY="16dp" />


    <ImageView
        android:id="@+id/menuView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/menu"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="11dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:backgroundTint="#521BB1F6"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="194dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Wallet"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/walletMoneyAmountView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Balance: Otl"
                android:textSize="30dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:backgroundTint="#521BB1F6"
        app:layout_constraintEnd_toStartOf="@+id/creditCardLayoutView"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="378dp">

        <ImageView
            android:id="@+id/qrView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/qr" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/creditCardLayoutView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:backgroundTint="#521BB1F6"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="378dp">

        <ImageView
            android:id="@+id/creditCardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/credit_card"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/paymentCardView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:backgroundTint="#521BB1F6"
        tools:layout_editor_absoluteX="220dp"
        tools:layout_editor_absoluteY="378dp">

        <ImageView
            android:id="@+id/paymentHistoryView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/payments"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/wealthCardView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:backgroundTint="#521BB1F6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/paymentCardView"
        tools:layout_editor_absoluteY="378dp">

        <ImageView
            android:id="@+id/wealthView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/upload_money" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>